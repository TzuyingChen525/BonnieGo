//購物車sidebar開啟關閉功能
function showshoppingCartSidebar() {
   const sidebar = document.querySelector('#shoppingCartSidebar');
   sidebar.classList.toggle("active"); // 增加active類別，觸發CSS的transition
}

function hideshoppingCartSidebar() {
   const sidebar = document.querySelector('#shoppingCartSidebar');
   sidebar.classList.remove("active"); // 移除active類別，讓sidebar回到右側隱藏
}

//收藏商品sidebar開啟關閉功能
function showfavoriteItemSidebar() {
   const sidebar = document.querySelector('#favoriteItemSidebar');
   sidebar.classList.toggle("active"); // 增加active類別，觸發CSS的transition
}

function hidefavoriteItemSidebar() {
   const sidebar = document.querySelector('#favoriteItemSidebar');
   sidebar.classList.remove("active"); // 移除active類別，讓sidebar回到右側隱藏
}

